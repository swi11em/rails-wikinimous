<h1 class="mb-4">Add Article</h1>

<%= form_with model: @article, class: "needs-validation" do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter article title" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, class: "form-control", rows: 5, placeholder: "Enter article content" %>
  </div>

  <%= f.submit "Update Article", class: "btn btn-primary" %>
<% end %>
